{
  "steps": [
    {
      "volumes": [
	{
          "name": "buildoutput",
          "path": "/output"
	}
      ],
      "name": "gcr.io/istio-testing/istio-builder:0.5.7",
      "args": [ "-c", "repo init -u \"$_MFEST_URL\" -m \"$_MFEST_FILE\" -b \"$_MFEST_VER\" && repo sync && cp .repo/manifest.xml /output/ && echo \"$_MFEST_VER\" > /output/green_build_sha.txt" ],
      "entrypoint": "bash"
    },
    {
      "volumes": [
	{
          "name": "buildoutput",
          "path": "/output"
	}
      ],
      "name": "gcr.io/istio-testing/istio-builder:0.5.7",
      "dir": "go/src/istio.io/istio",
      "args": [ "./release/cloud_builder.sh", "-p", "$_GCS_PATH", "-h", "$_DOCKER_HUB", "-t", "$_VER_STRING", "-o", "/output" ]
    },
    {
      "volumes": [
        {
          "name": "buildoutput",
          "path": "/output"
        }
      ],
      "name": "gcr.io/istio-testing/istio-builder:0.5.7",
      "dir": "go/src/istio.io/istio",
      "args": [ "./release/store_artifacts.sh", "-c", "$_BRANCH", "-p", "$_GCS_PATH", "-h", "$_DOCKER_HUB", "-v", "$_VER_STRING", "-o", "/output" ]
    }
  ],
  "options": {
    "machineType": "N1_HIGHCPU_8"
  },
  "timeout": "3600s",
}
